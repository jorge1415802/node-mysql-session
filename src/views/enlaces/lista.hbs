<div class="container p-4">
  <div class="row">
    {{#each enlaces}}
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <a href="{{Url}}" target="_blank">
              <h3 class="card-title text-uppercase">{{Titulo}}</h3>
            </a>
            <p class="m-2 text-center">{{Descripcion}}</p>
            <p class="m-2">Fecha: {{Fecha_Creacion}}</p>
            <a href="/enlaces/borrar/{{IdEnlace}}" class="btn btn-danger">Borrar Enlace</a>
            <a href="/enlaces/editar/{{IdEnlace}}" class="btn btn-warning">Editar</a>
          </div>
        </div>
      </div>
      {{else}}
        <div class="col-md-4 mx-auto">
          <div class="card card-body text-center">
            <p>No se crearon enlaces aun</p>
            <a href="/enlaces/agregar">Crear Uno</a>
          </div>
        </div>
    {{/each}}
  </div>
</div>
