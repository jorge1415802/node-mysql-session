<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form class="" action="/enlaces/editar/{{enlace_edicion.IdEnlace}}" method="post">
            <div class="form-group">
              <input type="text" name="titulo" value="{{enlace_edicion.Titulo}}" class="form-control" placeholder="Titulo" autofocus required>
            </div>
            <div class="form-group">
              <input type="url" name="url" value="{{enlace_edicion.Url}}" class="form-control" placeholder="Url" required>
            </div>
            <div class="form-group">
              <textarea name="descripcion" rows="8" cols="40" placeholder="Descripcion" class="form-control">{{enlace_edicion.Descripcion}}</textarea>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-success btn-block">Enviar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
